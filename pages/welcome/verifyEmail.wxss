/* pages/welcome/verifyEmail.wxss */
page {
  height: 100%;
}

.page.verifyEmail {
  height: 100%;
  margin: 30rpx;
  padding: 8rpx 30rpx 30rpx;
  background: #fff;
  box-shadow: 0 0 20rpx 2rpx rgba(0, 0, 0, 0.02);
  border-radius: 5rpx;
}

.title {
  font-family: Calibri;
  font-size: 50rpx;
  font-weight: bold;
  color: #555555;
  margin: 20rpx 0 5rpx 0rpx;
  text-align: center;
}

.verifyEmail image {
  height: 151rpx;
  width: 375rpx;
  margin-left: 135rpx;
  margin-top: 50rpx;
}

.verifyEmail button {
  font-size: 0.75rem;
}

.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  font-family: Calibri;
  letter-spacing: 1rpx;
  text-align: center;
}

.paragragh {
  line-height: 1.4;
  font-family: Calibri;
  letter-spacing: 1rpx;
  margin-top: 10rpx;
}

.uniformBtn {
  bottom: 1rem;
  position: absolute;
  width: 85%;
}

.input {
  height: 1.7rem;
  width: 150px;
  border: 1px solid lightgray;
}

.itemView{
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  height: 50px;
 
  justify-content: flex-start;
  display: flex;
  align-items: center;
}

.agreement{
  font-size: 0.75rem;
}

.emailText{
  margin: 0.5rem;
}